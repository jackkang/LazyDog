<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="1.2" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">


    <managed-bean>
        <managed-bean-name>registerBean</managed-bean-name>
        <managed-bean-class>com.adobe.g11n.RegisterBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>sessionBean</managed-bean-name>
        <managed-bean-class>com.adobe.g11n.SessionBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <navigation-rule>
        <from-view-id>/index.jsp</from-view-id>
        <navigation-case>
            <from-action>register</from-action>
            <from-outcome>accepted</from-outcome>
            <to-view-id>/faces/success.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>register</from-action>
            <from-outcome>failed</from-outcome>
            <to-view-id>/faces/fail.jsp</to-view-id>
        </navigation-case>
        <natigation-case>
            <from-action>logout</from-action>
            <from-outcome>home</from-outcome>
            <to-view-id>/faces/index.jsp</to-view-id>
        </natigation-case>
    </navigation-rule>
</faces-config>
